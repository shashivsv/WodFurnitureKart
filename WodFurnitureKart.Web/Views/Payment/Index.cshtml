


<div class="container">
    <div class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-3">
            <div id="cartContent">
                <h2>Payout Details</h2>

                <h4>Cash On Delivery</h4>

                @using (Html.BeginForm("Index", "Payment", FormMethod.Post))
                {  
                 <div class="form-group">
                    <input type="email" class="form-control" name="Card number" placeholder="Address 1">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="Expiry date" placeholder="Address 2">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-lg btn-block">Pay</button>
                </div>
                }
            </div>
        </div>
        <div id="shoppingCartTotals">
        </div>
    </div>
</div>
